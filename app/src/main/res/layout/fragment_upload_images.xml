<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadImagesFragment"
    android:id="@+id/cn">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-16dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:padding="16dp"
        android:background="@color/bg_color"
        android:layout_marginRight="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/images_rv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:src="@color/design_default_color_primary_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/uploadImage_button"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:backgroundTint="@color/primary_color"
            android:text="Upload Images"
            app:layout_constraintEnd_toEndOf="@+id/images_rv"
            app:layout_constraintStart_toStartOf="@+id/images_rv"
            app:layout_constraintTop_toBottomOf="@+id/images_rv"
            android:layout_marginTop="32dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/rent_out"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="@color/primary_color"
        android:text="@string/Rent_Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>