<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="6dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="32dp"
        app:cardCornerRadius="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             <com.smarteist.autoimageslider.SliderView
                 android:id="@+id/slider_view"
                 android:layout_width="match_parent"
                 android:layout_height="200dp"
                 android:layout_centerInParent="true"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 app:sliderAnimationDuration="600"
                 app:sliderAutoCycleDirection="back_and_forth"
                 app:sliderIndicatorAnimationDuration="600"
                 app:sliderIndicatorEnabled="true"
                 app:sliderIndicatorGravity="center_horizontal|bottom"
                 app:sliderIndicatorOrientation="horizontal"
                 app:sliderIndicatorPadding="3dp"
                 app:sliderIndicatorRadius="2dp"
                 app:sliderIndicatorSelectedColor="#5A5A5A"
                 app:sliderIndicatorUnselectedColor="#FFF"
                 app:sliderScrollTimeInSec="1" />

             <TextView
                 android:id="@+id/type_tennant_tv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 app:layout_constraintStart_toStartOf="parent"
                 style="@style/HeadingText"
                 android:layout_marginStart="16dp"
                 android:layout_marginTop="8dp"
                 android:textSize="22sp"
                 android:text="@string/favourite"
                 app:layout_constraintTop_toBottomOf="@+id/slider_view" />

             <TextView
                 android:id="@+id/locality_tv"
                 android:layout_width="270sp"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="4dp"
                 android:text="sefsdsfdsdfsdfsdfdsfdffsdf"
                 android:textSize="24sp"
                 app:layout_constraintStart_toStartOf="@+id/type_tennant_tv"
                 app:layout_constraintTop_toBottomOf="@id/type_tennant_tv" />

             <TextView
                 android:id="@+id/city_area_tv"
                 style="@style/HintTitle"
                 android:layout_width="250dp"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="4dp"
                 android:text="dsgsdsgdgdsdgvs"
                 android:textSize="18sp"
                 app:layout_constraintStart_toStartOf="@+id/locality_tv"
                 app:layout_constraintTop_toBottomOf="@+id/locality_tv" />

             <TextView
                 android:id="@+id/rent_tv"
                 style="@style/HeadingText"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="4dp"
                 android:text="5000"
                 android:textSize="24sp"
                 app:layout_constraintStart_toStartOf="@+id/city_area_tv"
                 app:layout_constraintTop_toBottomOf="@+id/city_area_tv" />
         </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>